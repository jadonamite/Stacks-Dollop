{
  "name": "@hirosystems/chainhooks-client",
  "version": "1.0.0",
  "description": "TypeScript client and type definitions for the Chainhooks API",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*",
    "schemas/**/*",
    "README.md"
  ],
  "typesVersions": {
    "*": {
      "schemas/*": [
        "schemas/*"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./schemas": {
      "types": "./dist/src/schemas/index.d.ts",
      "default": "./dist/src/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "shx rm -rf schemas && shx mkdir -p schemas && shx cp -r dist/src/schemas/* schemas/",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "cross-env NODE_ENV=test node --test --require ts-node/register tests/**/*.test.ts"
  },
  "keywords": [
    "chainhook",
    "stacks",
    "bitcoin",
    "typescript",
    "types",
    "schemas",
    "api",
    "client"
  ],
  "author": "Hiro Systems",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirosystems/chainhook-2.0.git",
    "directory": "packages/client"
  },
  "bugs": {
    "url": "https://github.com/hirosystems/chainhook-2.0/issues"
  },
  "homepage": "https://github.com/hirosystems/chainhook-2.0#readme",
  "devDependencies": {
    "@types/node": "^22.15.30",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.33"
  },
  "peerDependencies": {
    "@sinclair/typebox": "^0.34.33"
  },
  "publishConfig": {
    "access": "public"
  }
}
